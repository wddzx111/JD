<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp" >

            <!-- 广告轮播viewPager -->

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_home_top_advertisement"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </android.support.v4.view.ViewPager>

            <!-- 搜索工具条 -->

            <LinearLayout
                android:id="@+id/ll_home_search_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" 
                android:background="#33ff0000"
                >

                <!-- 扫啊扫 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" 
                    android:layout_margin="3dp"
                    >

                    <ImageView
                        android:id="@+id/iv_home_scan"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="2"
                        android:src="@drawable/iv_home_scan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/scan"
                        android:textSize="12sp" />
                </LinearLayout>
                <!-- 输入框 -->

                <EditText
                    android:id="@+id/et_home_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_speek"
                    android:drawableStart="@drawable/ic_search"
                    android:background="#ffffff"
                    android:hint="@string/search"
                    android:singleLine="true" 
                    android:layout_gravity="center_vertical"/>

                <!-- 消息 提示图片 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" 
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/iv_home_new"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="2"
                        android:src="@drawable/news" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/news"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 广告选择按钮 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:layout_alignBottom="@id/vp_home_top_advertisement"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_home_top_circle01"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/vp_jd_false" />

                <ImageView
                    android:id="@+id/iv_home_top_circle02"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/vp_jd_false" />

                <ImageView
                    android:id="@+id/iv_home_top_circle03"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/vp_jd_false" />

                <ImageView
                    android:id="@+id/iv_home_top_circle04"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/vp_jd_false" />

                <ImageView
                    android:id="@+id/iv_home_top_circle05"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/vp_jd_false" />

                <ImageView
                    android:id="@+id/iv_home_top_circle06"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/vp_jd_false" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 商城服务 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical" 
            android:background="#ffffff"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/jdmarket"
                    android:layout_weight="1"
                    android:text="京东超市"
                    android:gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/jingkou"
                    android:layout_weight="1"
                    android:text="全球购"
                    android:gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/czzc"
                    android:layout_weight="1"
                    android:text="充值中心"
                    android:gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/fzc"
                    android:layout_weight="1"
                    android:text="服装城"
                    android:gravity="center_horizontal"
                    />
            
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/zcqhb"
                    android:layout_weight="1"
                    android:text="赚钱抢红包"
                    android:gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/yhq"
                    android:layout_weight="1"
                    android:text="优惠券"
                    android:gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ljd"
                    android:layout_weight="1"
                    android:text="领京豆"
                    android:gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/qb"
                    android:layout_weight="1"
                    android:text="全部"
                    android:gravity="center_horizontal"
                    />
            
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal" >
                <ImageView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/jdkb"
                    android:layout_weight="1"
                    android:text="赚钱抢红包"
                    />
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="优惠券优惠券优惠券优惠券"
                    android:gravity="center_horizontal"
                    />
            
            </LinearLayout>
        </LinearLayout>
        <!-- 活动专场图片 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/activity"
                android:scaleType="fitXY"
                android:src="@drawable/activity1" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/activity"
                android:scaleType="fitXY"
                android:src="@drawable/activity2" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/activity"
                android:scaleType="fitXY"
                android:src="@drawable/activity3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/activity"
                android:scaleType="fitXY"
                android:src="@drawable/activity4" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:contentDescription="@string/activity"
                android:scaleType="fitXY"
                android:src="@drawable/activity5" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>